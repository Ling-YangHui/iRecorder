<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/mainColor">

        <TextView
            android:id="@+id/detailActivity_head_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/detailActivity_head_textView_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="RelativeOverlap" />

        <Button
            android:id="@+id/detailActivity_head_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20sp"
            android:background="@mipmap/appendactivity_head_back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/detailActivity_body_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="【乐正绫原创曲】花"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detailActivity_body_bvid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/mainColor"
                    android:text="BV1Tk4y1R7X1"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/detailActivity_body_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:text="2020-04-12  16:12:43" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/E_abstract"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <View
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.yanghui.irecorder.view.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="25dp"
                    android:text="乐正绫"
                    android:textColor="#666666"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/detailActivity_body_abstract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="感谢陪伴,请听我为你写下的告白诗。\n--Staff--" />

            <TextView
                android:id="@+id/detailActivity_body_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/mainColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/data"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <View
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:background="@color/black" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>